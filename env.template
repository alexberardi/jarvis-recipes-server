# =============================================================================
# jarvis-recipes-server - Environment Template
# =============================================================================
# Copy to .env and fill in values
# Port: 7030
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/jarvis_recipes

# For migrations (use localhost even when running in Docker)
MIGRATIONS_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/jarvis_recipes

# -----------------------------------------------------------------------------
# AUTHENTICATION (if using internal JWT)
# -----------------------------------------------------------------------------
AUTH_SECRET_KEY=CHANGE_ME_generate_secure_key
AUTH_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
PORT=7030
HOST=0.0.0.0
LOG_LEVEL=INFO
