# Staging Environment Configuration Template
# Copy this to .env.staging and fill in the values
#
# Usage: cp env.staging.template .env.staging

# GitHub Container Registry
GITHUB_REPO=your-username/jarvis-recipes-server
IMAGE_TAG=dev

# Database (external postgres container)
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://jarvis:changeme@postgres:5432/jarvis_recipes

# API Port Configuration
APP_PORT=7030          # Internal container port
HOST_PORT=7030         # External port exposed to host

# Authentication
# Generate with: openssl rand -hex 32
AUTH_SECRET_KEY=changeme-generate-with-openssl-rand-hex-32
AUTH_ALGORITHM=HS256

# LLM Proxy
LLM_BASE_URL=http://your-llm-proxy:8000
JARVIS_AUTH_APP_ID=your-app-id
JARVIS_AUTH_APP_KEY=your-app-key
JARVIS_FULL_MODEL_NAME=full

# OCR Service
JARVIS_OCR_SERVICE_URL=http://your-ocr-service:7031

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Queue Configuration
LLM_RECIPE_QUEUE_MAX_RETRIES=3
RECIPE_PARSE_JOB_ABANDON_MINUTES=4320

